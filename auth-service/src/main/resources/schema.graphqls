input SignInRequest {
    username: String!
    password: String!
}

type SignInResponse {
    accessToken: String!
    refreshToken: String!
}

input ClientCredentialsRequest {
    clientId: String!
    clientSecret: String!
    requestedPermissions: [String]!
    impersonationToken: String
}

input SignUpRequest{
    firstName: String!
    lastName: String!
    email: String!
    password: String!
    userType: UserType!
}

enum UserType {
    CUSTOMER,
    SERVICE_PROVIDER
}

type SignUpResponse{
    id: String!
}

type Query{

}

type Mutation {
    signIn(data: SignInRequest!): SignInResponse
    signUp(data: SignUpRequest!): SignUpResponse
    apiToken(data: ClientCredentialsRequest!): SignInResponse
}

schema {
  query: Query
  mutation: Mutation
}